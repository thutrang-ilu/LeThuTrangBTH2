@model LeThuTrangBTH2.Models.Customer
@{
    ViewData["Title"] = "Edit";
}

<h4>Sửa thông tin khách hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       <form asp-action = "Create">
            <div asp-validation-summary = "ModelOnly" class = "text-danger"></div>
            <div class = "form-group">
                <label asp-for = "CustomerID" class = "control-label"></label>
                <input asp-for = "CustomerID" class = "form-control"></input>
                <span asp-validation-for = "CustomerID" class = "text-danger"></span>
            </div>
            <div class = "form=group">
                <label asp-for = "CustomerName" class = "control-label"></label>
                <input asp-for = "CustomerName" class = "form-control"></input>
                <span asp-validation-for = "CustomerName" class = "text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Danh sách khách hàng</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}